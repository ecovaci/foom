<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.kpax.foom.view.WizardController">
    <bottom>
        <VBox>
            <Separator />
            <HBox alignment="CENTER_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
                <children>
                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#doBack" text="Back" />
                    <Button fx:id="nextButton" mnemonicParsing="false" onAction="#doNext" text="Next" />
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
